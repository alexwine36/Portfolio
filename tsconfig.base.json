{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@portfolio/generate-badges": ["libs/generate-badges/src/index.ts"],
      "@portfolio/hex-rgb": ["libs/hex-rgb/src/index.ts"],
      "@portfolio/markdown-to-pdf": ["libs/markdown-to-pdf/src/index.ts"],
      "@portfolio/resume-hooks": ["libs/resume-hooks/src/index.ts"],
      "@portfolio/theme": ["libs/theme/src/index.ts"],
      "@portfolio/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
